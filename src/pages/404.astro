---
import { SITE } from "@config";
import Layout from "@layouts/Layout.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import LinkButton from "@components/LinkButton.astro";
import Main from "@layouts/Main.astro";
---

<Layout title={`404 Not Found | ${SITE.title}`}>
  <Header />

  <Main>
    <div class="mb-14 flex flex-col items-center justify-center">
      <h1
        aria-label="404 Not Found"
        class="text-9xl font-bold text-skin-accent"
      >
        404
      </h1>
      <p class="mt-2 text-2xl sm:text-3xl">Page not found</p>

      <LinkButton
        href="/"
        className="my-6 text-lg underline underline-offset-4"
      >
        Go back home
      </LinkButton>
    </div>
  </Main>

  <Footer />
</Layout>
